{
	"name": "YouTubeâ„¢ Comment Translate",
	"version": "0.8.0",
	"description": "Automatically translate YouTube comments using the Google-Translate API",
	"content_scripts": [
		{
			"matches": [
				"https://www.youtube.com/watch?v=*",
				"https://www.youtube.com/channel/*/community*"
			],
			"run_at": "document_end",
			"js": ["inject.js"]
		}
	],
	"permissions": [
		"storage",
		"https://www.youtube.com/watch?v=*",
		"https://www.youtube.com/channel/*/community*"
	],
	"options_ui": {
		"page": "options.html",
		"chrome_style": true
	},
	"manifest_version": 2
}
